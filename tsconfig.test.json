{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "jsx": "react",
    "types": ["jest", "react"],
    "allowJs": true,
    "strict": false,
    "noImplicitAny": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "resolveJsonModule": true
  },
  "include": ["./tests/*.test.ts", "./tests/*.test.tsx", "./tests/setup.ts"],
  "exclude": ["./node_modules", "./dist", "./lib"]
}
