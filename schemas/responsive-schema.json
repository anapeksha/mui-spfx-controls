{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ResponsiveFieldType",
  "description": "Defines the responsive grid size for different breakpoints.",
  "type": "object",
  "additionalProperties": {
    "oneOf": [
      {
        "type": "string",
        "enum": ["auto", "grow"]
      },
      {
        "type": "number"
      },
      {
        "type": "boolean",
        "enum": [false]
      },
      {
        "type": "array",
        "items": {
          "oneOf": [
            { "type": "string", "enum": ["auto", "grow"] },
            { "type": "number" },
            { "type": "boolean", "enum": [false] },
            { "type": "null" }
          ]
        }
      },
      {
        "type": "object",
        "properties": {
          "xs": {
            "type": "integer",
            "minimum": 0,
            "maximum": 12
          },
          "sm": {
            "type": "integer",
            "minimum": 0,
            "maximum": 12
          },
          "md": {
            "type": "integer",
            "minimum": 0,
            "maximum": 12
          },
          "lg": {
            "type": "integer",
            "minimum": 0,
            "maximum": 12
          },
          "xl": {
            "type": "integer",
            "minimum": 0,
            "maximum": 12
          }
        },
        "additionalProperties": false
      }
    ]
  }
}
